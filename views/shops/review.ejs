<div class="row">
  <div class="col-sm-3 text-truncate">
    <span class="h1"><i class="fa fa-fw fa-user"></i><!-- /.fa fa-fw fa-user --></span><!-- /.h1 -->
    <span><%= user_name %></span>
  </div><!-- /.col-sm-3 -->

  <div class="col-sm-9">
    <div class="card bg-light mb-3 balloon">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-11">
            <p class="card-text" style="min-height:2rem;">
              <%= description%>
            </p><!-- /.card-text -->
            <p class="card-text text-muted">
              <small>
                訪問日：<%= visit ? moment(visit).format("YYYY/MM/DD"):"-"%>
                <span class="rate-start" style="--rate:<%= (score/5.00)*100%>%"></span><!-- /.rate-start -->
                <%= padding(score) %>
              </small>
            </p><!-- /.card-text text-muted -->
          </div><!-- /.col-sm-11 -->
        </div><!-- /.row -->
      </div><!-- /.card-body -->
    </div><!-- /.card bg-light mb-3 balloon -->
  </div><!-- /.col-sm-9 -->
</div><!-- /.row -->